<Window x:Class="CDMD_Project.Views.UserManagementPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="User Management" Height="500" Width="800">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Manage Users" FontWeight="Bold"/>
            <Button Content="Add New User" Width="150" Margin="0,10,0,0"/>
            <Button Content="Edit User" Width="150" Margin="0,10,0,0"/>
            <Button Content="Remove User" Width="150" Margin="0,10,0,0"/>

            <Label Content="Audit Logs" FontWeight="Bold" Margin="20,10,0,0"/>
            <DataGrid Name="AuditLogsList" AutoGenerateColumns="True" Height="200"/>
        </StackPanel>
    </Grid>
</Window>
