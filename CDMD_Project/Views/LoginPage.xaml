<Window x:Class="CDMD_Project.View.LoginPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="350" Width="400">
    <Grid>
        <Label Content="Username" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top"/>
        <TextBox Name="UsernameInput" HorizontalAlignment="Left" Margin="120,30,0,0" VerticalAlignment="Top" Width="200"/>

        <Label Content="Password" HorizontalAlignment="Left" Margin="10,90,0,0" VerticalAlignment="Top"/>
        <PasswordBox Name="PasswordInput" HorizontalAlignment="Left" Margin="120,90,0,0" VerticalAlignment="Top" Width="200"/>

        <Button Content="Login" HorizontalAlignment="Left" Margin="120,150,0,0" VerticalAlignment="Top" Width="100"/>
        <TextBlock HorizontalAlignment="Left" Margin="120,200,0,0" VerticalAlignment="Top">
            <Hyperlink NavigateUri="ForgotPasswordPage">Forgot Password?</Hyperlink>
        </TextBlock>
    </Grid>
</Window>
