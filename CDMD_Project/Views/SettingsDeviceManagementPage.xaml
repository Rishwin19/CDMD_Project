<Window x:Class="CDMD_Project.Views.SettingsDeviceManagementPage"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings and Device Management" Height="400" Width="600">
    <Grid>
        <StackPanel Margin="10">
            <Label Content="Device Management" FontWeight="Bold"/>
            <Button Content="Pair New Device" Width="150" Margin="0,10,0,0"/>
            <Button Content="Unpair Device" Width="150" Margin="0,10,0,0"/>

            <Label Content="Sync Settings" FontWeight="Bold" Margin="20,10,0,0"/>
            <Slider Minimum="5" Maximum="60" Value="30" Width="200"/>
            <TextBlock Text="Sync every 30 minutes" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
